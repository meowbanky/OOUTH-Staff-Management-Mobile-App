# Enable CORS headers (requires mod_headers)
<IfModule mod_headers.c>
    # Set CORS headers for all responses
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE, PUT"
    Header set Access-Control-Allow-Headers "Content-Type, Accept, Authorization, X-Requested-With, Origin"
    Header set Access-Control-Max-Age "1728000"
    Header set Access-Control-Allow-Credentials "true"
</IfModule>

# Pass Authorization header to PHP for GET requests
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Pass Authorization header to PHP for GET requests
    # Apache doesn't pass Authorization headers to PHP by default for GET requests
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>

# PHP settings
<IfModule mod_php.c>
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>
